{% extends 'base.html.twig' %}

{% block global_navigation %}
    <nav class="uk-navbar uk-navbar-attached">
        <div id="commsy_logo"></div>
    </nav>
{% endblock %}

{% block context_navigation %}
{% endblock %}

{% block content %}
    {% if app.user and app.user.username is same as('root') %}
        <div>
            <a href="{{ path('app_server_createportal') }}">Portal erstellen</a>
        </div>
    {% endif %}

    {% for activePortal in activePortals %}
        <a href="{{ path('app_login', { 'context': activePortal.id }) }}">{{ activePortal.title }}</a>
    {% else %}
        No portals yet!
    {% endfor %}
{% endblock %}